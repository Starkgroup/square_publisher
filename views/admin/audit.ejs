<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Audit Log - Square Publisher</title>
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="admin-page">
  <header class="admin-header">
    <div class="admin-brand">
      <div class="admin-brand-mark">
        <img src="/public/img/logo.png" alt="Square Capital Consulting logo" class="admin-brand-logo">
      </div>
      <div class="admin-brand-text">Square Capital Consulting</div>
    </div>
    <div class="admin-nav">
      <a href="/admin/posts" class="admin-nav-link">Posts</a>
      <a href="/admin/audit" class="admin-nav-link admin-nav-link--active">Audit Log</a>
      <div class="admin-user">
        <span><%= user.email %></span>
      </div>
    </div>
  </header>

  <main class="admin-main">
  <div class="container">
    <div class="card">
      <h2>Activity Log</h2>
      <p class="meta">Total: <%= total %> entries</p>

      <form method="GET" action="/admin/audit" class="filters">
        <input type="text" name="user_email" placeholder="User email" value="<%= filters.user_email || '' %>">
        <input type="text" name="post_id" placeholder="Post ID" value="<%= filters.post_id || '' %>">
        <select name="action">
          <option value="">All actions</option>
          <option value="login_success" <%= filters.action === 'login_success' ? 'selected' : '' %>>Login Success</option>
          <option value="login_failed" <%= filters.action === 'login_failed' ? 'selected' : '' %>>Login Failed</option>
          <option value="post_updated" <%= filters.action === 'post_updated' ? 'selected' : '' %>>Post Updated</option>
          <option value="post_published" <%= filters.action === 'post_published' ? 'selected' : '' %>>Post Published</option>
        </select>
        <button type="submit" style="padding: 0.5rem 1rem; background: #667eea; color: white; border: none; border-radius: 4px; cursor: pointer;">Filter</button>
      </form>

      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Action</th>
            <th>User</th>
            <th>Post ID</th>
            <th>Metadata</th>
          </tr>
        </thead>
        <tbody>
          <% if (logs.length === 0) { %>
            <tr><td colspan="5" style="text-align: center; padding: 2rem; color: #999;">No audit entries found</td></tr>
          <% } else { %>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= new Date(log.created_at).toLocaleString() %></td>
                <td>
                  <span class="badge badge-<%= log.action.includes('login_success') ? 'login' : log.action.includes('update') ? 'update' : log.action.includes('publish') ? 'publish' : log.action.includes('failed') ? 'error' : 'update' %>">
                    <%= log.action %>
                  </span>
                </td>
                <td><%= log.user_email || '-' %></td>
                <td><%= log.post_id || '-' %></td>
                <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                  <% if (log.metadata) { %>
                    <code style="font-size: 0.8rem;"><%= log.metadata %></code>
                  <% } else { %>
                    -
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>

      <div class="pagination">
        <% if (page > 1) { %>
          <a href="?page=<%= page - 1 %>&limit=<%= limit %><%= filters.action ? '&action=' + filters.action : '' %><%= filters.user_email ? '&user_email=' + filters.user_email : '' %><%= filters.post_id ? '&post_id=' + filters.post_id : '' %>">← Previous</a>
        <% } %>
        <span class="active">Page <%= page %></span>
        <% if ((page * limit) < total) { %>
          <a href="?page=<%= page + 1 %>&limit=<%= limit %><%= filters.action ? '&action=' + filters.action : '' %><%= filters.user_email ? '&user_email=' + filters.user_email : '' %><%= filters.post_id ? '&post_id=' + filters.post_id : '' %>">Next →</a>
        <% } %>
      </div>
    </div>
  </div>
  </main>
</body>
</html>
