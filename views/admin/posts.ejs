<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts - Square Publisher</title>
  <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body class="admin-page">
  <header class="admin-header">
    <div class="admin-brand">
      <div class="admin-brand-mark">
        <img src="/public/img/logo.png" alt="Square Capital Consulting logo" class="admin-brand-logo">
      </div>
      <div class="admin-brand-text">Square Capital Consulting</div>
    </div>
    <div class="admin-nav">
      <a href="/admin/posts" class="admin-nav-link admin-nav-link--active">Posts</a>
      <a href="/admin/audit" class="admin-nav-link">Audit Log</a>
      <div class="admin-user">
        <span><%= user.email %></span>
        <form action="/admin/logout" method="POST">
          <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
      </div>
    </div>
  </header>

  <main class="admin-main">
  <div class="container">
    <div class="filters">
      <select onchange="window.location.href='/admin/posts?status=' + this.value">
        <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
        <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Drafts</option>
        <option value="published" <%= filters.status === 'published' ? 'selected' : '' %>>Published</option>
        <option value="archived" <%= filters.status === 'archived' ? 'selected' : '' %>>Archived</option>
      </select>
    </div>

    <div class="posts-table">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Title / Summary</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (posts.length === 0) { %>
            <tr>
              <td colspan="5" style="text-align: center; color: #999;">No posts found</td>
            </tr>
          <% } else { %>
            <% posts.forEach(post => { %>
              <tr>
                <td>#<%= post.id %></td>
                <td>
                  <% if (post.title) { %>
                    <strong><%= post.title %></strong><br>
                  <% } %>
                  <small style="color: #666;"><%= post.summary || 'No summary' %></small>
                </td>
                <td>
                  <span class="status status-<%= post.status %>"><%= post.status %></span>
                </td>
                <td><%= new Date(post.created_at).toLocaleDateString() %></td>
                <td>
                  <a href="/admin/posts/<%= post.id %>" class="btn btn-primary">Edit</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <% if (pagination.totalPages > 1) { %>
      <div class="pagination">
        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
          <a href="/admin/posts?page=<%= i %>&status=<%= filters.status %>" 
             class="<%= i === pagination.page ? 'active' : '' %>"><%= i %></a>
        <% } %>
      </div>
    <% } %>
  </div>
  </main>
</body>
</html>
