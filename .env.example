# Server
NODE_ENV=development
PORT=3025
BASE_URL=http://localhost:3025

# Database
DB_PATH=./data/square.db

# Admin credentials (in production use strong values)
ADMIN_USER=admin@test.de
ADMIN_PASS=change_me_in_production

# Session secret (generate strong random string in production)
SESSION_SECRET=change_this_to_a_random_32_char_string_in_production

# Ingest API token
INGEST_TOKEN=your_secret_token_here

# Uploads
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760

# Limits
MAX_TEXT_LENGTH=50000
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# RSS
RSS_FEED_SIZE=50
RSS_CACHE_TTL=300000

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_IMAGE_SIZE=1024x1024
OPENAI_IMAGE_QUALITY=high
OPENAI_IMAGE_FORMAT=png
OPENAI_TEXT_MODEL=gpt-4o-mini

# Email settings (for magic link authentication)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@example.com
EMAIL_PASSWORD=your_smtp_password
EMAIL_USE_TLS=true
EMAIL_FROM_NAME=Square Publisher
EMAIL_RATE_LIMIT=60
EMAIL_TIMEOUT=10

# Magic link settings
MAGIC_LINK_TTL_MINUTES=60
MAGIC_LINK_MAX_PER_HOUR=10
MAGIC_LINK_RATE_LIMIT=20
